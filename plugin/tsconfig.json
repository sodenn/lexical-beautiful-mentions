{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es2022", "dom"],
    "module": "ESNext",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["./src"],
  "exclude": ["lib", "node_modules"]
}
